{
  "name": "products",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "generators": {
    "@nx/workspace:component": {
      "style": "scss"
    }
  },
  "implicitDependencies": ["shared-assets", "shared-styles"],
  "prefix": "nx-example",
  "projectType": "application",
  "sourceRoot": "apps/products/src",
  "tags": ["type:app", "scope:products"],
  "targets": {
    "build": {
      "configurations": {
        "production": {
          "aot": true,
          "budgets": [
            {
              "maximumError": "5mb",
              "maximumWarning": "2mb",
              "type": "initial"
            },
            {
              "maximumWarning": "6kb",
              "type": "anyComponentStyle"
            }
          ],
          "extractLicenses": true,
          "fileReplacements": [
            {
              "replace": "apps/products/src/environments/environment.ts",
              "with": "apps/products/src/environments/environment.prod.ts"
            }
          ],
          "namedChunks": false,
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false
        }
      },
      "executor": "@nx/angular:application",
      "options": {
        "aot": true,
        "assets": [
          "apps/products/src/_redirects",
          {
            "glob": "**/*",
            "input": "libs/shared/assets/src/assets",
            "output": "assets"
          },
          {
            "glob": "favicon.ico",
            "input": "libs/shared/assets/src",
            "output": "."
          }
        ],
        "browser": "apps/products/src/main.ts",
        "index": "apps/products/src/index.html",
        "indexHtmlTransformer": "tools/scripts/index-html-transform.ts",
        "outputPath": "dist/apps/products",
        "polyfills": ["apps/products/src/polyfills.ts"],
        "styles": [
          "libs/shared/styles/src/index.scss",
          "libs/shared/header/index.scss",
          "node_modules/normalize.css/normalize.css"
        ],
        "tsConfig": "apps/products/tsconfig.app.json",
        "scripts": []
      },
      "outputs": ["{options.outputPath}"]
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "npx ts-node --project tools/tsconfig.tools.json tools/scripts/deploy --siteName nrwl-nx-examples-products --outputPath dist/apps/products"
          }
        ]
      }
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "products:build"
      }
    },
    "generate-env-files": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "node -v"
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "serve": {
      "configurations": {
        "production": {
          "buildTarget": "products:build:production"
        }
      },
      "dependsOn": [
        {
          "params": "ignore",
          "target": "generate-env-files"
        }
      ],
      "executor": "@nx/angular:dev-server",
      "options": {
        "buildTarget": "products:build"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "apps/products/jest.config.ts"
      },
      "outputs": ["{workspaceRoot}/coverage/apps/products"]
    }
  }
}
